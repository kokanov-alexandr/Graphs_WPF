<Window x:Name="HelpWindow" x:Class="graphs.Help"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:graphs"
        mc:Ignorable="d"
        Title="Help" Height="350" Width="600" Background="#FFAE35D2" ResizeMode="CanMinimize">
    <Grid Height="350" Width="600">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="113*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="Questions" Content="Есть вопросы?"   Foreground="#DD111010" Margin="418,245,47,65" Background="#FFB7AB3A" BorderBrush="#FFB7AB3A" Width="100" Height="40" FontSize="10" Click="Questions_Button_Click" Grid.Column="1"/>
        <Button x:Name="OK" Content="Окей"  Foreground="#DD111010" Margin="10,245,0,0" Background="#FF33A61E" BorderBrush="#FFB7AB3A" Width="100" Height="40" FontSize="10" Click="OK_Button_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1"/>

    </Grid>
</Window>
